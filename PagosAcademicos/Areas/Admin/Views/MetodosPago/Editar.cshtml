@model PagosAcademicos.Models.Entities.TipoPago
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Editar";
    Layout = "AdminLayout";
}


<section class="max-w-xl mx-auto mt-4 ">

    <h3 class="text-2xl">Editar metodo de pago</h3>

    <form method="post" action="~/Admin/MetodosPago/Editar" class="flex flex-col max-w-lg p-4 ">
        <input type="hidden" asp-for="@Model.Id" />
        <label asp-for="Nombre">Nombre</label>
        <input type="text" class="input" asp-for="@Model.Nombre">
        <div class="flex justify-end">
            <input type="submit" value="Guardar" class="bg-primary px-4 py-1 text-white rounded-md mt-2 mr-4">
            <a href="~/Admin/MetodosPago" class="bg-red-500 px-4 py-1 text-white rounded-md mt-2">
                Cancelar
            </a>

        </div>
        <p class="text-red-500 mt-2">
            @Html.ValidationSummary(true)
        </p>
    </form>

</section>