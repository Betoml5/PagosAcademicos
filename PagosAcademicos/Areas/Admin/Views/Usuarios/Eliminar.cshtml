@model PagosAcademicos.Areas.Admin.Models.ViewModels.EliminarUsuarioViewModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "AdminLayout";
}

<section class="max-w-xl mx-auto mt-4">
    <div class="bg-white shadow-xl p-4">
        <form action="~/admin/usuarios/eliminar" method="post">
            <input type="hidden" asp-for="Id">
            <h1 class="text-3xl font-bold">Eliminar</h1>
            <p class="text-gray-600">¿Estás seguro de eliminar al usuario @Model.Nombre?</p>
            <div class="flex justify-end mt-4">
                <button type="submit" class="bg-primary px-4 py-2 text-white ">Eliminar</button>
                <a href="~/admin/usuarios" class="bg-red-500 px-4 py-2 ml-2 text-white">Cancelar</a>
            </div>
        </form>
    </div>
</section>
