@model IEnumerable<PagosAcademicos.Areas.Admin.Models.ViewModels.IndexUsuarioAdminViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "AdminLayout";
}

<section class="max-w-5xl mx-auto">
    <h3 class="text-2xl my-4">Usuarios</h3>
    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                <tr>

                    <th scope="col" class="py-3 px-6">
                        Id de usuario
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Nombre
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Apellido
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Estatus
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Carrera
                    </th>

                    <th scope="col" class="py-3 px-6">
                        Semestre
                    </th>



                    <th scope="col" class="py-3 px-6">
                        Eliminar
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var usuario in Model)
                {

                    <tr class="bg-white border-b ">

                        <td class="py-4 px-6">@usuario.Id</td>
                        <td class="py-4 px-6">
                            @usuario.Nombre
                        </td>
                        <td class="py-4 px-6">
                            @usuario.Apellido
                        </td>
                        <td class="py-4 px-6">
                            @if (usuario.Estatus)
                            {
                                <span class="text-green-500 font-semibold">Pagado</span>
                            }
                            else
                            {
                                <span class="text-red-500 font-semibold">Pagado</span>
                            }
                        </td>
                        <td class="py-4 px-6">@usuario.Carrera</td>
                        <td class="py-4 px-6">@usuario.Semestre</td>
                        <td class="py-4 px-6">
                            <a href="~/admin/usuarios/eliminar/@usuario.Id">Eliminar</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</section>