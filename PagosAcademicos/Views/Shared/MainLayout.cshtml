<!DOCTYPE html>
<html lang="es-mx">

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300;500;700;900&family=Poppins:ital,wght@0,100;0,300;0,500;0,700;1,400&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="~/styles.css" asp-append-version="true" />


</head>

<body>
    <header class="bg-primary shadow-xl p-4">
        <div class="flex flex-col md:flex-row justify-between items-center max-w-4xl mx-auto">
            <h1 class="text-white mb-4 md:mb-0">
                Paywave
            </h1>
            <nav class="flex items-center  text-white">
                <a href="/" class="mr-4">Inicio</a>

                @if (User.Identity.Name == null)
                {
                    <p class="border rounded-full px-4 py-1 " hidden>
                        Usuario
                    </p>
                }
                else
                {
                    <p class="border rounded-full px-4 py-1 ">
                        @User.Identity.Name
                    </p>
                }
                @if (User.Claims.Any())
                {
                    <button class="ml-4">
                        <a href="~/home/logout">
                            <img width=20 height=20 src="/assets/images/signout.png" />
                        </a>
                    </button>
                }
                else
                {
                    <button class="ml-4">
                        <a href="#iniciar-sesion">
                            Iniciar sesión
                        </a>
                    </button>

                }


            </nav>
        </div>
    </header>
    <main>
        @RenderBody()
    </main>
</body>

</html>